package com.example.demo;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

@Repository
public interface TokenRepository extends JpaRepository<Token, Integer> {
	@Query(value = "from Token te inner join UserData ue on te.userData.id = ue.id where ue.id = :userId and (te.valid = true)")
	List<Token> findAllValidTokenByUserEntity(int userId);

	Optional<Token> findByToken(String jwtToken);
	
	void deleteByUserId(int userId);
}
